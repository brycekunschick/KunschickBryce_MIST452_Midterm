@model RequestWithOfficersVM

<h1>Update Request</h1>

<div class="border col-md-10">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Request.RequestId" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group m-4">
            <label asp-for="Request.VIN" class="control-label"></label>
            <input asp-for="Request.VIN" class="form-control" />
            <span asp-validation-for="Request.VIN" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Request.PlateNum" class="control-label"></label>
            <input asp-for="Request.PlateNum" class="form-control" />
            <span asp-validation-for="Request.PlateNum" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Request.VehicleMake" class="control-label"></label>
            <input asp-for="Request.VehicleMake" class="form-control" />
            <span asp-validation-for="Request.VehicleMake" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Request.VehicleModel" class="control-label"></label>
            <input asp-for="Request.VehicleModel" class="form-control" />
            <span asp-validation-for="Request.VehicleModel" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Request.Mileage" class="control-label"></label>
            <input asp-for="Request.Mileage" class="form-control" />
            <span asp-validation-for="Request.Mileage" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Request.Description" class="control-label"></label>
            <textarea asp-for="Request.Description" class="form-control"></textarea>
            <span asp-validation-for="Request.Description" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Request.OfficerId" class="control-label"></label>
            <select asp-for="Request.OfficerId" class="form-control" asp-items="@Model.ListOfOfficers">
                <option value="">Select an officer</option>
            </select>
            <span asp-validation-for="Request.OfficerId" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    </form>
</div>
